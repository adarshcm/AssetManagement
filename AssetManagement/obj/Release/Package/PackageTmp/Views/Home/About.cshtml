                    <div class="col-xs-5">
                        @Html.TextBoxFor(m => m.east, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.south, new { @class = "col-xs-3 control-label" })
                    <div class="col-xs-5">
                        @Html.TextBoxFor(m => m.south, new { @class = "form-control" })
                    </div>
