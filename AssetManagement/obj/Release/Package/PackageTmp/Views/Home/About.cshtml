                        @Html.Label("MPConstituency")
                        
                    </div>
                    <div class="col-lg-4">
                        @Html.RadioButton("constituencyType", "MLAConstituency", Model.MLAConstituency, new {  @id = "rdBtnMLAConstituency" })
                        @Html.Label("MLAConstituency")                      
                    </div>
                </div>
            </div>*@

            <div id="showMPFlow" >
                <div class="form-group">
                    @Html.LabelFor(m => m.district, new { @class = "col-xs-3 control-label" })
                    <div class="col-xs-5">
                        @Html.DropDownListFor(m => m.selectedDistrict, Model.district, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MLAConstituency, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-2">
                    @Html.CheckBoxFor(m => m.MLAConstituency)
                </div>
            </div>

            <div id="showMLAFlow" >
                <div class="form-group">
                    @Html.LabelFor(m => m.taluk, new { @class = "col-xs-3 control-label" })
                    <div class="col-xs-5">
                        @Html.DropDownListFor(m => m.selectedTaluk, Model.taluk, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-xs-3 control-label">Select</label>
                    <div class="col-xs-8">
                        <div class="col-xs-4">
                            @Html.RadioButton("districtType", "urban", Model.urban, new { @name= "districtType", @id = "rdBtnUrban" })
                            @Html.LabelFor(m => m.urban)

                        </div>
                        <div class="col-xs-4">
                            @Html.RadioButton("districtType", "rural", Model.rural,new { @name = "districtType", @id = "rdBtnRural" })
                            @Html.LabelFor(m => m.rural)

                        </div>
                    </div>
                </div>

                <div id="showUrbanFlow" style="display:none">
                    <div class="form-group">
                        @Html.LabelFor(m => m.municipalWardNo, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-5">
                            @Html.DropDownListFor(m => m.selectedMunicipalWardNo, Model.municipalWardNo, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div id="showRuralFlow" style="display:none">
                   
                     <div class="form-group">
                        @Html.LabelFor(m => m.talukPanchayat, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-5">
                            @Html.DropDownListFor(m => m.selectedTalukPanchayat, Model.talukPanchayat, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.gramaPamchayat, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-5">
                            @Html.DropDownListFor(m => m.selectedGramaPanchayat, Model.gramaPamchayat, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.village, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-5">
                            @Html.DropDownListFor(m => m.selectedVillage, Model.village, new { @class = "form-control" })
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <!-- Advisory details tab-->
        <div class="tab-pane" id="advisoryInfoTab">

            <div class="form-group">
                @Html.LabelFor(m => m.advisorySocietyName, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
                    @Html.TextBoxFor(m => m.advisorySocietyName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.advisoryApprovalNumber, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
                    @Html.TextBoxFor(m => m.advisoryApprovalNumber, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.advisoryRegNumber, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
                    @Html.TextBoxFor(m => m.advisoryRegNumber, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.advisoryRegDate, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">

                    <div class="input-group input-append date" id="pickAdvisoryRegDate">
                        @Html.TextBoxFor(m => m.advisoryRegDate, new { @class = "form-control" })
                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
               
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.advisoryExpDate, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
                    
                    <div class="input-group input-append date" id="pickAdvisoryExpDate">
                        @Html.TextBoxFor(m => m.advisoryExpDate, new { @class = "form-control" })
                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>



                </div>
            </div>
         
        </div>


        <!-- Assets tab -->
        <div class="tab-pane" id="assetInfoTab">
            <div class="form-group">

                @Html.LabelFor(m => m.institutionName, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
