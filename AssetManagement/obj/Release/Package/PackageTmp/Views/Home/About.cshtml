                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.classificationType, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-5">
                    @Html.DropDownListFor(m => m.selectedClassificationType, Model.classificationType, new { @class = "form-control" })
                </div>
            </div>

        </div>

