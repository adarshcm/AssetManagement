
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Map/css/map.css" rel="stylesheet" />
    <style>
        
     body{
         padding-top: 0px !important;
     }
    
    /* Remove the jumbotron's default bottom margin */ 
     .jumbotron {
      padding:0px !important;
      margin-bottom: 0;
      /*background-image: url('../../Images/test.jpg');
      background-size: 100%;*/

      background: no-repeat url('../../Images/daria.jpeg') 50% / 100%;
    }
   
    /* Add a gray background color and some padding to the footer */
    footer {
    background-color: #f2f2f2;
      padding: 25px;
    }

    .sidebar-nav .navbar .navbar-collapse {
    padding: 0;
    max-height: none;
  }
  .sidebar-nav .navbar ul {
    float: none;
    display: block;
  }
  .sidebar-nav .navbar li {
    float: none;
    display: block;
  }
  .sidebar-nav .navbar li a {
    padding-top: 12px;
    padding-bottom: 12px;
  }
  .container {
     padding-right: 0px; 
     padding-left: 0px; 
  }

  /* On small screens, set height to 'auto' for sidenav and grid */
   .sidenav {
        height: auto;
        padding: 15px;
    }


    .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
        color: #ffffff;
        background-color:#82898F
    }

    .sidebar-nav .navbar li a {
        color:#82898F;
    }
        
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Include Bootstrap Wizard -->
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Map/js/lib/d3.v3.min.js"></script>
    <script src="~/Map/js/lib/topojson.v1.min.js"></script>
    <script src="~/Map/js/map.js"></script>

    

    <div class="container">
        <div class="jumbotron">
            <div class="container text-center">
                <h1>Online Store</h1>
                <p>Mission, Vission & Values</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-2" style="padding:15px">
                <div class="sidebar-nav">
                    <div class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <span class="visible-xs navbar-brand">Sidebar menu</span>
                        </div>
                        <div class="navbar-collapse collapse sidebar-navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li id="homeNavBtn">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li id="institutionNavBtn">@Html.ActionLink("Instituion Details", "ViewInstituionDetails", "Home")</li>
                                <li id="reportNavBtn">@Html.ActionLink("Report", "OpenReport", "Home")</li>
                                <li><a href="#">Menu Item 3</a></li>
                                <li><a href="#">Menu Item 4</a></li>
                                <li><a href="#">Reviews <span class="badge">1,118</span></a></li>
                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
            <div class="col-sm-8" style="padding:15px">
                
                @RenderBody()
            </div>

            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p>ADS</p>
                </div>
                <div class="well">
                    <p>ADS</p>
                </div>
            </div>


        </div>
    </div>


</body>
</html>
