<style type="text/css">
    #mapDiv {         
        height:650px;
        width:auto;          
    }
    .leaflet-interactive{
        stroke:#000 !important;
    }
    .leaflet-control.enabled a {
            background-color: yellow;
        }
        .help {
            font-size: 1.5em;
            position: absolute;
            top:0;
            left: 0;
            right: 0;
            height: 30px;
            z-index: 10;
            background-color: rgba(0,0,0,0.5);
            color: white;
            padding: 10px;
            margin: 0px;
            text-align: center;
        }
        .help a.sources {
            float: left;
            margin-left: 50px;
            color: white;
        }
        .help a.logo {
            float: right;
        }
        .help a.logo img {
            height: 30px;
        }

        .leaflet-control-draw-measure{
            width:36px !important;
            height:36px !important;
        }

</style>



<div class="col-sm-12" style="padding:0px 15px;">

    <div id="mapDiv">


    </div>
    
</div>



<script>
    $(function () {
        var ruralMarkerData = [];
        var urbanMarkerData = [];

        function onClickInstitutionDetails(data) {           
            window.location.href = '/Home/ViewInstituionDetails?InstitutionId=' + data.institutionId;
        }

        $('#mapNavBtn').addClass("active");
        var markerData = @Html.Raw(ViewBag.getMarkers);
        
        markerData.forEach(function(d){
            if(d['type'] == 'urban'){
                urbanMarkerData.push(d);
            }
            else{
                ruralMarkerData.push(d);
            }
        })

       
        var mapRender = new LeafMap();
        mapRender.init({
            container: 'mapDiv'
        });
        mapRender.draw();

        var data = {
            "markerData": urbanMarkerData,
            "name": "Urban"
        }
        mapRender.renderMarker(data, onClickInstitutionDetails);

        data = {
            "markerData": ruralMarkerData,
            "name": "Rural"
        }
        mapRender.renderMarker(data, onClickInstitutionDetails);

    })
</script>