
@{
    ViewBag.Title = "RemoveAsset";
}

<h2>RemoveAsset</h2>

<div id="showRemoveAssetGrid">

</div>

<script>

    $(function () {
        removeAssetGrid();
    });


    function removeAssetGrid() {

        var clients  = @Html.Raw(ViewBag.data);


        $("#showRemoveAssetGrid").jsGrid({
            width: "100%",
            height: "400px",         
            sorting: false,
            paging: true,
            data: clients,
            pageSize: 15,
            pageButtonCount: 5,
            deleteConfirm: "Do you really want to delete the Asset?",
            controller: {

                deleteItem: function (item) {
                    console.log(item);
                    $.ajax({

                        url: "/AssetAccount/RemoveInstitutionsFromDB",
                        data: {"assetName":item["Asset Name"]},
                        dataType: "json",
                        success:function(data){

                        }
                        
                    });
                }
            },
            fields: [
                
                { name: "Institution Name", type: "text", width:150 },
                { name: "Asset Name", type: "text", width: 150 },
                { type: "control",editButton: false}

            ]
        });
    }

</script>